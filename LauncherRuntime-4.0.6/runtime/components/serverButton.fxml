<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>

<!-- DrLeonardo refactor -->

<Pane fx:id="serverButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" 
   minWidth="-Infinity" prefHeight="203.0" prefWidth="560.0" styleClass="b-20"
   stylesheets="@components.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <Pane id="serverButtonLayout" layoutX="3.0" prefHeight="203.0" prefWidth="560.0"
      styleClass="serverButtons">
      <children>

         <!-- Лого сервера (Исправлено на Region) -->
         <Region id="serverLogo" layoutX="-3.0" prefHeight="203.0" prefWidth="560.0" />

         <!-- Онлайн сервера -->
         <Pane id="block-online" layoutX="479.0" layoutY="17.0" prefHeight="35.0" prefWidth="48.0">
            <children>
               <Label id="online" alignment="CENTER" layoutY="-1.0" prefHeight="35.0"
                  prefWidth="48.0" text="?" />
            </children>
         </Pane>

         <!-- Индикатор скорости загрузки -->
         <Label id="speedLoad" alignment="CENTER" layoutX="394.0" layoutY="17.0" prefHeight="35.0" prefWidth="75.0" styleClass="online-violet" text="0 m/s" visible="false" />

         <!-- Информация сервера -->
         <Label id="nameServer" alignment="CENTER" layoutX="12.0" layoutY="26.0" prefHeight="29.0"
            prefWidth="189.0" text="SERVERNAME" textAlignment="CENTER" />
         <Label id="genreServer" alignment="CENTER" layoutX="12.0" layoutY="75.0" prefHeight="17.0"
            prefWidth="189.0" text="HITECH" textAlignment="CENTER" />

         <!-- Кнопка сохранить (для других сцен) -->
         <Button id="save" layoutX="31.0" layoutY="128.0" mnemonicParsing="false" prefHeight="55.0"
            prefWidth="151.0" text="%runtime.components.serverButton.save"/>

         <Button id="reset" layoutX="289.0" layoutY="9.0" mnemonicParsing="false" prefHeight="35.0"
            prefWidth="81.0" text="%runtime.components.serverButton.reset" visible="false">
            <tooltip>
               <Tooltip id="resetTooltip" text="%runtime.components.serverButton.resetTooltip" />
            </tooltip>
         </Button>

      </children>
   </Pane>

</Pane>